<Window x:Class="beauty_studio.Windows.WindowService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:beauty_studio.Windows"
        mc:Ignorable="d"
        Title="WindowService" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button Content="Добавить" Name="btnAddService" Click="btnAddService_Click"/>
                <Button Content="Редактировать" Name="btnEditService" Click="btnEditService_Click"/>
                <Button Content="Удалить" Name="btnDeleteService" Click="btnDeleteService_Click"/>
            </StackPanel>
            <DataGrid x:Name="dgService" AutoGenerateColumns="True"/>
        </StackPanel>
    </Grid>
</Window>
