<Window x:Class="beauty_studio.Windows.WindowAddEditService"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:beauty_studio.Windows"
        mc:Ignorable="d"
        Title="WindowAddEditService" Height="450" Width="400">
    <Grid>
        <StackPanel>
            <Label Content="Добавление услуги" HorizontalAlignment="Center" FontSize="40"/>
            <Label Content="Наименование"/>
            <TextBox x:Name="tbName"/>
            <Label Content="Стоимость"/>
            <TextBox x:Name="tbCost"/>
            <Label Content="Длительность в секундах"/>
            <TextBox x:Name="tbDuration"/>
            <Label Content="Описание"/>
            <TextBox x:Name="tbDescription"/>
            <Label Content="Скидка"/>
            <TextBox x:Name="tbDiscount"/>
            <Label Content="Главное изображение"/>
            <TextBox x:Name="tbManeImage"/>
            <Button Content="Сохранить" Name="btnSave" Click="btnSave_Click"/>
            <Button Content="Отмена" Name="btnCansel" Click="btnCansel_Click"/>
        </StackPanel>
    </Grid>
</Window>
